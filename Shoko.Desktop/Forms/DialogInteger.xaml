<Window x:Class="Shoko.Desktop.Forms.DialogInteger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Infralution.Localization.Wpf"
        xmlns:usercontrols="clr-namespace:Shoko.Desktop.UserControls"
        ShowInTaskbar="False" WindowStyle="ToolWindow"
       SizeToContent="WidthAndHeight"  WindowStartupLocation="CenterOwner" Topmost="False" Title="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=Input_Number}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="txtPrompt" Grid.Column="0" Grid.Row="0" Text="Prompt:" Margin="10"/>
        <usercontrols:IntegerUpDown x:Name="udInput" Grid.Column="1" Grid.Row="0" Minimum="1" Maximum="100" Value="10" Margin="10" VerticalAlignment="Center" />

        <Button HorizontalAlignment="Right" Name="btnOK" Style="{DynamicResource RoundButtonStyle}" Width="Auto" Grid.Column="0" Grid.Row="1" Margin="5,5,10,10" Grid.ColumnSpan="2" IsDefault="True">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <Image Height="16" Width="16" Source="/Images/16_tick.png" Margin="0,0,5,0"/>
                <TextBlock VerticalAlignment="Center" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=OK}" Margin="0,0,5,0"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
