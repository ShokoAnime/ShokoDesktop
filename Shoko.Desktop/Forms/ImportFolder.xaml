<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Shoko.Desktop.ViewModel"
        xmlns:wpf="clr-namespace:Infralution.Localization.Wpf"
        xmlns:usercontrols="clr-namespace:Shoko.Desktop.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Shoko.Desktop.Forms.ImportFolder"
        Title="{wpf:Resx Key=ImportFolder, ResxName=Shoko.Commons.Properties.Resources}" Width="600" SizeToContent="Height" Icon="/ShokoDesktop;component/Images/32_edit.png" ResizeMode="CanResize" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">

    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <DataTemplate x:Key="cmbTemplate">

                <StackPanel Orientation="Horizontal" Height="24">
                    <Image Height="24" Width="24" Source="{Binding Path=Icon}" VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Margin="5,0,10,0" Text="{Binding Path=Name}"
                                   VerticalAlignment="Center" FontWeight="DemiBold" />
                    <TextBlock Margin="0,0,2,0" Text="(" VerticalAlignment="Center" />
                    <TextBlock Margin="0,0,2,0" Text="{Binding Path=Provider}" VerticalAlignment="Center" />
                    <TextBlock Margin="0,0,5,0" Text=")" VerticalAlignment="Center" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>

    </Window.Resources>
    <StackPanel Orientation="Vertical">



        <Border Margin="5,5,5,5" Padding="5" Background="#F1F1F1" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Style="{DynamicResource ToolbarBorderControlStyle}" Background="FloralWhite" Margin="0,0,0,5" Padding="5" DockPanel.Dock="Top" BorderThickness="1"
                        Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Margin="5,0,0,0" Text="{wpf:Resx Key=ShokoServer_ImportFoldersInfo, ResxName=Shoko.Commons.Properties.Resources}" TextWrapping="Wrap" />

                        <Image Height="16" Width="16" Source="/Images/16_warning.png" Margin="5,2,4,0" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" />
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="{wpf:Resx Key=ShokoServer_DDInfo, ResxName=Shoko.Commons.Properties.Resources}" Margin="5,0,0,0" TextWrapping="Wrap" />

                        <usercontrols:HyperLinkStandard Grid.Row="2" Grid.Column="1" Margin="5,2,5,0" DisplayText="{wpf:Resx Key=LearnMore_ImportFolders, ResxName=Shoko.Commons.Properties.Resources}" URL="{wpf:Resx Key=Link_ImportFolders, ResxName=Shoko.Commons.Properties.Resources}"/>

                    </Grid>
                </Border>

                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,5" FontWeight="Bold" Padding="5" Text="{wpf:Resx Key=ServerDetails, ResxName=Shoko.Commons.Properties.Resources}" />

                <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=ImportFolder_Provider, ResxName=Shoko.Commons.Properties.Resources}"/>
                <ComboBox x:Name="comboProvider" ItemsSource="{Binding Source={x:Static local:VM_ShokoServer.Instance},Path=FolderProviders}" Grid.Column="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Grid.Row="2" Grid.ColumnSpan="2" ItemTemplate="{StaticResource cmbTemplate}" VerticalAlignment="Center" Width="Auto" SelectedIndex="0"/>

                
                <TextBlock Grid.Column="0" Grid.Row="3" Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=ImportFolderPath, ResxName=Shoko.Commons.Properties.Resources}"/>
                <TextBox x:Name="txtImportFolderLocation" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="3" Width="Auto"  Margin="0,5,0,5"/>
                <Button Name="btnProvChooseFolder" Style="{DynamicResource RoundButtonStyle}" Margin="3" Grid.Column="2"
                        Grid.Row="3">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Height="16" Width="16" Source="/Images/24_folder.png" Margin="0,0,0,0" />
                    </StackPanel>
                </Button>

                
                <CheckBox x:Name="chkDropSource" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Style="{StaticResource RightAlignedCheckbox}">
                    <TextBlock Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=DropSource, ResxName=Shoko.Commons.Properties.Resources}"/>
                 </CheckBox>

                <CheckBox x:Name="chkDropDestination" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" Style="{StaticResource RightAlignedCheckbox}">
                    <TextBlock Grid.Column="0" Grid.Row="5" Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=DropDestination, ResxName=Shoko.Commons.Properties.Resources}"/>
                </CheckBox>

                <CheckBox x:Name="chkIsWatched" Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" Style="{StaticResource RightAlignedCheckbox}">
                    <TextBlock Grid.Column="0" Grid.Row="6" Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=ImportSettings_WatchFiles, ResxName=Shoko.Commons.Properties.Resources}"/>
                </CheckBox>

            </Grid>

        </Border>

        <Border Name="GridLocalMapping" Margin="5,5,5,5" Padding="5" Background="GhostWhite" BorderBrush="LightGray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,0,10,5" FontWeight="Bold" Padding="5" Text="{wpf:Resx Key=LocalMapping, ResxName=Shoko.Commons.Properties.Resources}"/>

                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,0,10,5" FontWeight="DemiBold" Padding="5" Text="{wpf:Resx Key=LocalPath, ResxName=Shoko.Commons.Properties.Resources}"/>
                <TextBox  x:Name="txtLocalPath" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1" Width="Auto" Margin="0,5,0,5"/>
                <Button Name="btnChooseFolder" Style="{DynamicResource RoundButtonStyle}" Margin="3" Grid.Column="2"
                        Grid.Row="1">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Height="16" Width="16" Source="/Images/24_folder.png" Margin="0,0,0,0" />
                    </StackPanel>
                </Button>
            </Grid>

        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,0,10">
            <Button HorizontalAlignment="Left" x:Name="btnSave" Margin="0,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <Image Height="16" Width="16" Source="/Images/16_save.png" Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center" Text="{wpf:Resx Key=Save, ResxName=Shoko.Commons.Properties.Resources}" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>

            <Button HorizontalAlignment="Left" x:Name="btnCancel" Margin="10,0,0,0" Style="{DynamicResource FlatButtonStyle}" Width="Auto">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <Image Height="16" Width="16" Source="/Images/16_cancel.png" Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center" Text="{wpf:Resx Key=Cancel, ResxName=Shoko.Commons.Properties.Resources}" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </StackPanel>


</Window>
