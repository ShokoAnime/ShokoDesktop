<UserControl x:Class="Shoko.Desktop.UserControls.Settings.VideoPlayerSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:usercontrols="clr-namespace:Shoko.Desktop.UserControls"
             xmlns:settings="clr-namespace:Shoko.Desktop.UserControls.Settings"
             xmlns:local="clr-namespace:Shoko.Desktop.ViewModel" 
             xmlns:wpf="clr-namespace:Infralution.Localization.Wpf"
             mc:Ignorable="d"
             d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Default Player Help -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Default}"
                           Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
                       Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_DefaultNote}"
                           TextWrapping="Wrap" />
                <usercontrols:HyperLinkStandard Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"
                                                Margin="0,5,0,0"
                                                DisplayText="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=LearnMore_VideoPlayer}"
                                                URL="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=Link_VideoPlayer}" />
            </Grid>
        </Border>

        <!-- Default Player -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"
                Background="#F1F1F1" Margin="0,0,0,5" Padding="5">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="3" Name="TextDefaultConfigured" Visibility="{Binding RelativeSource={RelativeSource Self}, Path=DefaultConfigured}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Configured}" Foreground="Green" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Name="TextDefaultNotConfigured" Visibility="{Binding RelativeSource={RelativeSource Self}, Path=DefaultNotConfigured}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotConfigured}" Foreground="Red" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right" />

                <TextBlock Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_DefaultPlayer}"
                           VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" />

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Row="0"
                            Grid.Column="1">
                    <ComboBox Grid.Row="0" Name="cboDefaultPlayer" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>

        </Border>

        <!-- Marked As Watched -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                Background="#F1F1F1" Margin="0,0,0,5" Padding="5">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <CheckBox Name="chkAutoSetWatched" Grid.Column="0" VerticalAlignment="Center" Grid.Row="0"
                          Content="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_AutoMark}"
                          Margin="10,0,0,0" />

                <usercontrols:IntegerUpDown Grid.Column="1" Grid.Row="0" x:Name="udWatchedPct" Minimum="1" Maximum="100"
                                          VerticalAlignment="Center" Margin="5,0,0,0"
                                          Value="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=VideoWatchedPct}" />
            </Grid>

        </Border>

        <!-- Supported Video Players -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"
        	Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
        			Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_SupportedPlayers}"
        			Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
        			Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
        			Text="{wpf:Resx Key=VideoPlayer_SupportedNote, ResxName=Shoko.Commons.Properties.Resources}"
        			TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!-- Internal MPV -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3"
        	Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
        			Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_InternalMPV}"
        			Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <Image Height="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0" Grid.Row="1"
                       VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_InternalMPVNote}"
                           TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!-- Media Player Classic -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="211*" />
                    <ColumnDefinition Width="552*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPC}"
                           Grid.ColumnSpan="3" FontSize="14" FontWeight="Bold" Height="19" />
                <TextBlock Grid.Row="0" Grid.Column="2" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsMPCInstalled}" 
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Installed}" Foreground="Green" 
                           Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Row="0" Grid.Column="2" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsMPCNotInstalled}" 
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotInstalled}" Foreground="Red" 
                           Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0" Grid.Row="1"
                       VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPCInfo}"
                           TextWrapping="Wrap" Grid.ColumnSpan="2" />
            </Grid>
        </Border>

        <!-- Media Player Classic Web UI -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3"
                Background="#F1F1F1" Margin="0,0,0,5" Padding="5">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="1" Grid.Row="0"
                         TextWrapping="Wrap" Text="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=MPCWebUIPort}"
                         VerticalAlignment="Top" Width="50"/>
                <CheckBox x:Name="chkMpcWebUiIntegration"
                          Content="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPCWebUIPort}"
                          HorizontalAlignment="Left" Margin="5,1,0,0" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top"/>
                <ComboBox Name="cmbPreferredMPC" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,1,0,0" Grid.Row="0" Grid.Column="2" />
            </Grid>

        </Border>

        <!-- VLC -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_VLC}"
                           Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsVLCInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Installed}" Foreground="Green" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsVLCNotInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotInstalled}" Foreground="Red" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0" Grid.Row="1"
                       VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_VLCInfo}"
                           TextWrapping="Wrap" Grid.ColumnSpan="2" />
            </Grid>
        </Border>

        <!-- VLC Web UI -->

        <!-- Zoom Player -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3"
        	Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
        			Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_ZoomPlayer}"
        			Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Visibility="{Binding Path=IsZoomPlayerInstalled, Source={x:Static local:VM_UserSettings.Instance}}" Text="{wpf:Resx Key=VideoPlayer_Installed, ResxName=Shoko.Commons.Properties.Resources}" Foreground="Green" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Visibility="{Binding Path=IsZoomPlayerNotInstalled, Source={x:Static local:VM_UserSettings.Instance}}" Text="{wpf:Resx Key=VideoPlayer_NotInstalled, ResxName=Shoko.Commons.Properties.Resources}" Foreground="Red" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0" Grid.Row="1"
                       VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_ZoomPlayerInfo}"
                           TextWrapping="Wrap" Grid.ColumnSpan="2" />           
            </Grid>
        </Border>

        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3"
                Background="#F1F1F1" Margin="0,0,0,5" Padding="10">
        </Border>

        <!-- Limited Video Players -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="3"
        	Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
        			Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_LimitedPlayers}"
        			Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
        			Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
        			Text="{wpf:Resx Key=VideoPlayer_LimitedNote, ResxName=Shoko.Commons.Properties.Resources}"
        			TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!-- Intenral MPV -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPV}"
                           Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsMPVInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Installed}" Foreground="Green" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsMPVNotInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotInstalled}" Foreground="Red" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
                       Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPVNote}"
                           TextWrapping="Wrap" />
                <usercontrols:HyperLinkStandard Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"
                                                Margin="0,5,0,0"
                                                DisplayText="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_MPVInstall}"
                                                URL="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=Link_MPV}" />
            </Grid>
        </Border>

        <!-- PotPlayer -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,5" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_PotPlayer}"
                           Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsPotInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Installed}" Foreground="Green" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsPotNotInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotInstalled}" Foreground="Red" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
                       Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_PotPlayerNote}"
                           TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!-- Windows Default -->
        <Border Style="{DynamicResource ToolbarBorderControlStyle}" Grid.Column="0" Grid.Row="13" Grid.ColumnSpan="3"
                Background="FloralWhite" Margin="0,0,0,0" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_WindowsDefault}"
                           Grid.ColumnSpan="2" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsWindowsDefaultInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_Installed}" Foreground="Green" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <TextBlock Grid.Column="3" Visibility="{Binding Source={x:Static local:VM_UserSettings.Instance},Path=IsWindowsDefaultNotInstalled}" Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_NotInstalled}" Foreground="Red" Margin="10,5,10,5" VerticalAlignment="Top" HorizontalAlignment="Right" />
                <Image Height="16" Width="16" Source="/Images/32_info.png" Margin="5,2,4,0" Grid.Column="0"
                       Grid.Row="1" VerticalAlignment="Top" />
                <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,0,5,0" VerticalAlignment="Center"
                           Text="{wpf:Resx ResxName=Shoko.Commons.Properties.Resources, Key=VideoPlayer_WindowsDefaultNote}"
                           TextWrapping="Wrap" />
            </Grid>
        </Border>

    </Grid>
</UserControl>